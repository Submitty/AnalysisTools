#!/usr/bin/env python3

"""
Determine whether a file contains a token.
"""

import sys
import os
import argparse

DIR = os.path.dirname(os.path.abspath(__file__))

sys.path.append(os.path.join(DIR, ".."))

import lang.lexer

ARGPARSER = argparse.ArgumentParser(\
        description="Determine whether a file contains a token.")
ARGPARSER.add_argument("token")
ARGPARSER.add_argument("file", nargs="?", default=None)
ARGPARSER.add_argument("-l", "--lang", type=str)
ARGS = ARGPARSER.parse_args()

if not ARGS.file:
    print(0)
    sys.exit(0)

EXT = os.path.splitext(ARGS.file)[1][1:]

DATA = ""
with open(ARGS.file, "r") as f:
    for line in f:
        DATA += line

LEXER = None

if ARGS.lang:
    LANG = ARGS.lang
else:
    if EXT in ["c", "cpp", "cc", "C", "h", "hpp", "H"]:
        LANG = "c"
    elif EXT in ["py"]:
        LANG = "python3"

if LANG == "c":
    LEXER = lang.lexer.c
elif LANG == "python3":
    LEXER = lang.lexer.python
elif LANG == "python2":
    LEXER = lang.lexer.python2

if LEXER:
    print(len([x for x in LEXER(DATA) if x == ARGS.token]))
else:
    print("Error: invalid filetype")
    sys.exit(1)
